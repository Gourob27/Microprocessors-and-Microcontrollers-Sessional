CODE SEGMENT
ASSUME CS:CODE, DS:CODE;
PPIC_C EQU 06H;
PPIC   EQU 04H;
PPIB   EQU 02H
PPIA   EQU 00H
;

ORG 0000H
MOV AL,10000000B
OUT PPIC_C,AL
;

L1:

MOV SI,OFFSET FONT1;
MOV AH,11111110B;


L2:MOV AL,AH
OUT PPIB,AL
MOV AL,BYTE PTR CS:[SI]
OUT PPIA,AL
;
CALL TIMER
MOV AL,00H
OUT PPIA,AL

INC SI
CLC
ROL AH,1
JC L2

JMP L3

;


L3:
DELAY:MOV CX,0FFFFH
DELAY0:LOOP DELAY0
;

MOV SI,OFFSET FONT2;
MOV AH,11111110B;


L4:MOV AL,AH
OUT PPIB,AL
MOV AL,BYTE PTR CS:[SI]
OUT PPIA,AL
;
CALL TIMER
MOV AL,00H
OUT PPIA,AL
INC SI
CLC
ROL AH,1
JC L4
JMP L5
;


L5:
DELAY1:MOV CX,0FFFFH
DELAY2:LOOP DELAY2

;

MOV SI,OFFSET FONT3;
MOV AH,11111110B;

L6:MOV AL,AH
OUT PPIB,AL
MOV AL,BYTE PTR CS:[SI]
OUT PPIA,AL
;
CALL TIMER
MOV AL,00H
OUT PPIA,AL
INC SI
CLC
ROL AH,1
JC L6
JMP L7
;

L7:
DELAY3:MOV CX,0FFFFH
DELAY4:LOOP DELAY4
;

MOV SI,OFFSET FONT4;
MOV AH,11111110B;

L8:MOV AL,AH
OUT PPIB,AL
MOV AL,BYTE PTR CS:[SI]
OUT PPIA,AL
;
CALL TIMER
MOV AL,00H
OUT PPIA,AL
INC SI
CLC
ROL AH,1
JC L8
JMP L9
;


L9:
DELAY5:MOV CX,0FFFFH
DELAY6:LOOP DELAY6

;

MOV SI,OFFSET FONT5;
MOV AH,11111110B;


L10:MOV AL,AH
OUT PPIB,AL
MOV AL,BYTE PTR CS:[SI]
OUT PPIA,AL
;
CALL TIMER
MOV AL,00H
OUT PPIA,AL
INC SI
CLC
ROL AH,1
JC L10
JMP L11
;
L11:
DELAY7:MOV CX,0FFFFH
DELAY8:LOOP DELAY8;
JMP L1;


TIMER:MOV CX,100
TIMER1:NOP
NOP
NOP


LOOP TIMER1
RET
;

FONT1:DB 00000000B
DB 00000000B
DB 11000110B
DB 10101001B
DB 10011001B
DB 10010001B
DB 11111111B
DB 00000000B


FONT2:DB 00000000B
DB 11111100B
